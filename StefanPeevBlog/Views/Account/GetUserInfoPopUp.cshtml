@model StefanPeevBlog.Models.AccountPopUpBriefInfoViewModel

<div class="row">
    <div class="col-md-offset-1 col-md-4">
        @{ var img = Model.ImagePath != null ? Model.ImagePath : "~/ImagesUploaded/NoImage.png";}
        <img src="@Url.Content(img)" alt="Alternate Text" />
    </div>
    <div class="col-md-7">
        <div class="row">
            <div class="col-md-12">
                @{ var fullName = Model.FullName != null ? Model.FullName : "Not Set"; }
                @fullName
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @{ var info = Model.Info != null ? Model.FullName : "No info"; }
                @info
            </div>
        </div>
    </div>
</div>
