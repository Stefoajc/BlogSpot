@model StefanPeevBlog.Models.Comments

@using (Html.BeginForm("Edit", "Comments", FormMethod.Post, new { }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input id ="Id" name="Id" type = "hidden" value = "@Model.Id" />
        @Html.HiddenFor(m => m.PostId)
        @Html.HiddenFor(m => m.AuthorId)
        @Html.HiddenFor(m => m.CommentId)
        @Html.HiddenFor(m => m.PostedOn)
        <div class="well">
            <h4>Edit a Comment: </h4>
            <div class="form-group">
                @Html.TextAreaFor(m => m.Body, new { @class = "form-control", rows = "3", cols = "20" }) @*Create PostDetailsViewModel which contains field for the comment*@
            </div>
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
}

